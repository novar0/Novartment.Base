<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Novartment.Base.Net.Mime</AssemblyName>
		<TargetFramework>netstandard2.0</TargetFramework>
		<Version>4.1.2-beta</Version>
		<Product>Novartment.Base</Product>
		<Authors>Novar</Authors>
		<Copyright>Copyright © 2014-2017</Copyright>
		<Description>Base classes for MIME</Description>
		<NeutralLanguage>en</NeutralLanguage>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<CodeAnalysisRuleSet>StyleCop.Analyzers.ruleset</CodeAnalysisRuleSet>
		<Features>IOperation</Features>
	</PropertyGroup>

  <ItemGroup>
		<PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.6.0" />
		<PackageReference Include="StyleCop.Analyzers" Version="1.1.0-beta006" />
	</ItemGroup>

	<ItemGroup>
		<AdditionalFiles Include="StyleCop.Analyzers.ruleset" />
		<AdditionalFiles Include="stylecop.json" />
	</ItemGroup>

	<ItemGroup>
    <ProjectReference Include="..\Novartment.Base\Novartment.Base.csproj" />
  </ItemGroup>

</Project>
