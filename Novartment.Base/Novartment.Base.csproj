<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
		<AssemblyName>Novartment.Base</AssemblyName>
		<TargetFrameworks>netstandard2.0;netcoreapp2.1</TargetFrameworks>
		<Version>4.3.0-beta</Version>
		<Description>Base classes</Description>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<CodeAnalysisRuleSet>StyleCop.Analyzers.ruleset</CodeAnalysisRuleSet>
		<Features>IOperation</Features>
		<LangVersion>latest</LangVersion>
	</PropertyGroup>

  <ItemGroup>
    <AdditionalFiles Include="StyleCop.Analyzers.ruleset" />
    <AdditionalFiles Include="stylecop.json" />
  </ItemGroup>

  <ItemGroup>
		<PackageReference Include="System.Buffers" Version="4.5.0" />
		<PackageReference Include="Microsoft.Extensions.Logging" Version="2.1.0" />
		<PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.6.0" />
		<PackageReference Include="StyleCop.Analyzers" Version="1.1.0-beta007" />
	</ItemGroup>
	

</Project>
